---
import Header from "../components/header.astro";
import Hero from "../components/hero.astro";
import Introduction from "../components/introduction.astro";
import Experience from "../components/experience.astro";
import Footer from "../components/footer.astro";
---

<html lang="en">
	<head>
		<title>Ahmed Ahmed</title>
		<meta content="width=device-width, initial-scale=1" name="viewport" />
		<meta
			name="description"
			content="Full-Stack developer with a passion for front-end development, expertise in JavaScript and experience in React. Positive attitude, strong work ethic, and a love for learning and taking on new challenges.."
		/>
		<link rel="icon" href="/cartoon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link
			href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;0,1000;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900;1,1000&family=Source+Code+Pro:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&Inconsolata:wght@200;300;400;500;600;700;800;900&family=Noto+Sans+Arabic:wght@100;200;300;400;500;600;700;800;900&family=Quicksand:wght@300;400;500;600;700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-neutral-800 text-gray-200 leading-relaxed">
		<div class="container max-w-screen-xl mx-auto px-8">
			<Header />
			<Hero />
			<Introduction />
		</div>

		<Experience />
		<Footer/>
	</body>
</html>

<style is:global>
	body {
		font-family: "Nunito", sans-serif;
	}

	.code {
		font-family: "Source Code Pro", monospace;
	}
	.bg-neutral-750 {
		background-color: #2d2d2d;
	}
</style>
